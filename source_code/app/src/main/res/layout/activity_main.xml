<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:orientation="vertical"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:padding="25sp"
    android:background="#303030"
    tools:context=".MainActivity">

    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:fillViewport="true"
        android:layout_height="275sp"
        android:layout_marginBottom="10sp"
        android:id="@+id/scrollView"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true">

    <TableLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:stretchColumns="0,1"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true">
        <TableRow
            android:layout_marginBottom="20sp">
            <Button
                android:layout_height="fill_parent"
                android:layout_width="fill_parent"
                android:text="1D"
                android:background="#f06292"
                android:textColor="#fafafa"
                android:layout_gravity="start"
                android:id="@+id/button"
         />

            <Button
                android:layout_height="wrap_content"
                android:text="2D"
                android:background="#ff4081"
                android:textColor="#fafafa"
                android:layout_gravity="end"
                android:id="@+id/button2"
        />
        </TableRow>
<TableRow
    android:layout_marginBottom="20sp">
    <Button
        android:layout_height="wrap_content"
        android:text="3D"
        android:background="#ec407a"
        android:textColor="#fafafa"
        android:id="@+id/button3"
        android:layout_gravity="start"

        />

    <Button
        android:layout_height="wrap_content"
        android:text="4D"
        android:background="#f50057"
        android:textColor="#fafafa"
        android:id="@+id/button4"
        android:layout_gravity="end"

         />
</TableRow>
        <TableRow
            android:layout_marginBottom="20sp">
            <Button
                android:layout_height="wrap_content"
                android:text="5D"
                android:background="#e91e63"
                android:textColor="#fafafa"
                android:id="@+id/button5"
                android:layout_gravity="start"
     />

            <Button
                android:layout_height="wrap_content"
                android:text="6D"
                android:background="#c51162"
                android:textColor="#fafafa"
                android:layout_gravity="end"
                android:id="@+id/button6"

        />
        </TableRow>
        <TableRow
            android:layout_marginBottom="20sp">
            <Button
                android:layout_height="wrap_content"
                android:text="7D"
                android:background="#d81b60"
                android:textColor="#fafafa"
                android:id="@+id/button7"
                android:layout_gravity="start"

        />

            <Button
                android:layout_height="wrap_content"
                android:text="8D"
                android:background="#ad1457"
                android:textColor="#fafafa"
                android:id="@+id/button8"
                android:layout_gravity="end"
        />
        </TableRow>
        <TableRow
            >
            <Button
                android:layout_height="wrap_content"
                android:text="9D"
                android:background="#c2185b"
                android:textColor="#fafafa"
                android:layout_gravity="start"
                android:id="@+id/button9"
                android:layout_below="@+id/button7"

         />

            <Button
                android:layout_height="wrap_content"
                android:text="10D"
                android:background="#880e4f"
                android:textColor="#fafafa"
                android:id="@+id/button10"
                android:layout_gravity="end"
         />
        </TableRow>
        </TableLayout>
    </ScrollView>
    <Button
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        android:text="About"
        android:background="#1565c0"
        android:textColor="#fafafa"
        android:id="@+id/button12"
        android:layout_marginTop="10sp"
        android:layout_marginBottom="10sp"
        android:layout_above="@+id/button11"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
    <Button
        android:layout_height="wrap_content"
        android:text="Extra Content"
        android:layout_width="fill_parent"
        android:background="#ff5722"
        android:textColor="#000000"
        android:id="@+id/button11"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/scrollView"
        android:layout_alignStart="@+id/scrollView" />
</LinearLayout>
